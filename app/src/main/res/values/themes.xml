<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UASMobileProgram" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.UASMobileProgram.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/pink_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.UASMobileProgram</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>